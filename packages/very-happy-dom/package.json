{
  "name": "very-happy-dom",
  "type": "module",
  "version": "0.0.8",
  "description": "Like a light-weight version of `happy-dom` powered by Bun.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/very-happy-dom#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/very-happy-dom.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/very-happy-dom/issues"
  },
  "keywords": [
    "very-happy-dom",
    "happy-dom",
    "bun"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "very-happy-dom": "./dist/bin/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun --bun build.ts",
    "lint": "bunx --bun eslint .",
    "lint:fix": "bunx --bun eslint . --fix",
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "changelog": "bunx changelogen --output CHANGELOG.md",
    "prepublishOnly": "bun --bun run build",
    "release": "bun run changelog && bunx bumpp package.json --all",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "size": "bun run build && du -sh dist && find dist -name '*.js' -exec du -h {} \\; | sort -h"
  },
  "devDependencies": {
    "bunfig": "^0.15.0"
  }
}
